{
  "compilerOptions": {
    "target": "es6",
    "module": "es2020",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "types": ["vite/client", "node"],
    "lib": ["es2020", "dom", "dom.iterable"],
    "jsx": "react-jsx"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "example"]
}